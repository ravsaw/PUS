@model PUS.Models.Service

<div class="modal-header">

    <h5 class="modal-title"><i class="fa-solid fa-eye"></i> Oferta </h5>

    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

</div>



<div class="modal-body">
    <div class="container">
        <div class="row">

            <div class="col-sm-4">
                <img class="img-fluid ratio-4x3" src=@($"img/{Model.Id}.png") onerror="this.src='img/placeholder.png';">
            </div>

            <div class="col-sm-8">
                <b>@Html.DisplayFor(model => model.Title)</b>
                <br>
                @Html.DisplayFor(model => model.Description)
            </div>

        </div>
    </div>
</div>


<div class="modal-footer">

    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zamknij</button>

    <button onclick="" type="button" class="btn btn-outline-primary">
        <i class="fa-solid fa-comments"></i>
    </button>

    <button onclick="" type="button" class="btn btn-outline-success">
        <i class="fa-solid fa-right-left"></i>
    </button>

</div>